{
  "name": "accent",
  "description": "A simple library for serializable highlights.",
  "version": "0.0.9",
  "author": "Miguel Oller <miguel@getshortweb.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/migueloller/accent.git"
  },
  "keywords": [
    "accent",
    "highlight",
    "annotation",
    "selection",
    "range"
  ],
  "dependencies": {
    "bluebird": "^3.1.5",
    "diff-match-patch": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "^4.1.8",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-run": "^3.0.8",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "eslint-plugin-react": "^3.16.1",
    "isparta": "^4.0.0",
    "mocha": "^2.4.5"
  },
  "main": "./lib/accent.js",
  "files": [
    "lib/",
    "dist/"
  ],
  "scripts": {
    "lint": "eslint ./src/**/*.js ./test/**/*.js",
    "pretest": "npm run lint",
    "test": "mocha --recursive --compilers js:babel-register",
    "cover": "babel-node ./node_modules/.bin/isparta cover _mocha --report lcovonly -- --recursive && codecov",
    "babel": "rm -rf ./lib && babel ./src --out-dir ./lib -q",
    "browserify": "rm -rf ./dist && mkdir ./dist && browserify -t babelify ./src/accent.js > ./dist/accent.js",
    "prepublish": "npm test && npm run babel && npm run browserify"
  }
}
