{
  "name": "accent",
  "description": "A simple library for serializable highlights.",
  "version": "0.0.9",
  "author": "Miguel Oller <miguel@getshortweb.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/migueloller/accent.git"
  },
  "keywords": [
    "accent",
    "highlight",
    "annotation",
    "selection",
    "range"
  ],
  "dependencies": {
    "bluebird": "^3.1.5",
    "diff-match-patch": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.4.3",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.6",
    "eslint-config-airbnb": "^4.0.0",
    "eslint-plugin-react": "^3.16.1",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^1.1.1",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "mocha-lcov-reporter": "^1.0.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "main": "./lib/accent.js",
  "files": [
    "lib/",
    "dist/"
  ],
  "scripts": {
    "prepublish": "npm test; gulp browserify",
    "gulp": "gulp",
    "lint": "gulp lint",
    "test": "npm run lint; mocha -R spec --recursive --compilers js:babel-register",
    "coveralls": "babel-node ./node_modules/.bin/isparta cover _mocha --report lcovonly -- -R spec --recursive && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  }
}
